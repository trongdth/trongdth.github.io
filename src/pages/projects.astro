---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';

// Sample projects - you can later move this to content collections
const projects = [
	{
		title: 'Project Alpha',
		description: 'A cutting-edge platform built with modern web technologies. Features real-time data processing and beautiful UI.',
		tags: ['TypeScript', 'React', 'Node.js', 'PostgreSQL'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: true,
	},
	{
		title: 'Blockchain DApp',
		description: 'Decentralized application for secure transactions. Smart contracts deployed on multiple networks.',
		tags: ['Solidity', 'Web3', 'Ethereum', 'React'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: true,
	},
	{
		title: 'Mobile App',
		description: 'Cross-platform mobile application with native performance. Available on iOS and Android.',
		tags: ['React Native', 'TypeScript', 'Firebase'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: false,
	},
	{
		title: 'API Gateway',
		description: 'High-performance API gateway with rate limiting, caching, and authentication built-in.',
		tags: ['Go', 'gRPC', 'Redis', 'Docker'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: false,
	},
	{
		title: 'DevOps Pipeline',
		description: 'Fully automated CI/CD pipeline with infrastructure as code and monitoring.',
		tags: ['Kubernetes', 'Terraform', 'GitHub Actions'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: false,
	},
	{
		title: 'ML Platform',
		description: 'Machine learning platform for training and deploying models at scale.',
		tags: ['Python', 'TensorFlow', 'FastAPI', 'AWS'],
		github: 'https://github.com/trongdth',
		demo: '#',
		featured: false,
	},
];

const featuredProjects = projects.filter(p => p.featured);
const otherProjects = projects.filter(p => !p.featured);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description="Featured projects and portfolio work by Trong Dinh" />
	</head>
	<body>
		<Header />
		<main>
			<section class="page-hero">
				<h1>Projects</h1>
				<p class="page-description">
					A collection of projects I've worked on. From web applications to blockchain 
					solutions, here's some of my recent work.
				</p>
			</section>

			<section class="featured-section">
				<h2>Featured</h2>
				<div class="featured-grid">
					{featuredProjects.map((project) => (
						<article class="project-card featured card">
							<div class="project-header">
								<svg viewBox="0 0 24 24" width="24" height="24" class="folder-icon">
									<path fill="currentColor" d="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z"/>
								</svg>
								<div class="project-links">
									<a href={project.github} target="_blank" rel="noopener noreferrer" aria-label="View on GitHub">
										<svg viewBox="0 0 16 16" width="20" height="20">
											<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
										</svg>
									</a>
									<a href={project.demo} target="_blank" rel="noopener noreferrer" aria-label="View live demo">
										<svg viewBox="0 0 24 24" width="20" height="20">
											<path fill="currentColor" d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"/>
										</svg>
									</a>
								</div>
							</div>
							<h3>{project.title}</h3>
							<p>{project.description}</p>
							<div class="project-tags">
								{project.tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="other-section">
				<h2>Other Projects</h2>
				<div class="projects-grid">
					{otherProjects.map((project) => (
						<article class="project-card card">
							<div class="project-header">
								<svg viewBox="0 0 24 24" width="20" height="20" class="folder-icon">
									<path fill="currentColor" d="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm0 12H4V8h16v10z"/>
								</svg>
								<div class="project-links">
									<a href={project.github} target="_blank" rel="noopener noreferrer" aria-label="View on GitHub">
										<svg viewBox="0 0 16 16" width="18" height="18">
											<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
										</svg>
									</a>
								</div>
							</div>
							<h3>{project.title}</h3>
							<p>{project.description}</p>
							<div class="project-tags">
								{project.tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="cta-section">
				<div class="cta-card card">
					<h2>Want to collaborate?</h2>
					<p>Check out my GitHub for more projects or reach out to discuss opportunities.</p>
					<div class="cta-buttons">
						<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="btn">
							<svg viewBox="0 0 16 16" width="20" height="20">
								<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
							</svg>
							View GitHub
						</a>
						<a href="/about" class="btn btn-outline">About Me</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 1000px;
	}

	.page-hero {
		text-align: center;
		padding: 4em 0 2em;
	}

	.page-hero h1 {
		font-size: 3rem;
		margin-bottom: 0.5em;
	}

	.page-description {
		font-size: 1.1rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto;
	}

	section {
		padding: 2em 0;
	}

	section h2 {
		margin-bottom: 1.5em;
		font-size: 1.5rem;
	}

	.featured-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1.5em;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.25em;
	}

	.project-card {
		display: flex;
		flex-direction: column;
		padding: 1.5em;
	}

	.project-card.featured {
		padding: 2em;
	}

	.project-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1em;
	}

	.folder-icon {
		color: var(--accent-cyan);
	}

	.project-links {
		display: flex;
		gap: 0.75em;
	}

	.project-links a {
		color: var(--text-muted);
		transition: color var(--transition-fast);
	}

	.project-links a:hover {
		color: var(--accent-cyan);
	}

	.project-card h3 {
		font-size: 1.25rem;
		margin-bottom: 0.5em;
		color: var(--text-primary);
	}

	.project-card.featured h3 {
		font-size: 1.5rem;
	}

	.project-card p {
		flex: 1;
		font-size: 0.95rem;
		color: var(--text-secondary);
		margin-bottom: 1.5em;
	}

	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		margin-top: auto;
	}

	.cta-section {
		padding: 3em 0;
	}

	.cta-card {
		text-align: center;
		padding: 3em;
		background: linear-gradient(135deg, var(--bg-card) 0%, var(--bg-secondary) 100%);
	}

	.cta-card h2 {
		margin-bottom: 0.5em;
	}

	.cta-card p {
		color: var(--text-secondary);
		margin-bottom: 1.5em;
	}

	.cta-buttons {
		display: flex;
		justify-content: center;
		gap: 1em;
	}

	@media (max-width: 900px) {
		.featured-grid {
			grid-template-columns: 1fr;
		}

		.projects-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 640px) {
		.page-hero h1 {
			font-size: 2rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.cta-buttons {
			flex-direction: column;
		}
	}
</style>
