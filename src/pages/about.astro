---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';

const skills = [
	{ category: 'Leadership', items: ['Team Management', 'Strategy', 'Product Vision', 'Mentoring'] },
	{ category: 'Technical', items: ['System Architecture', 'Cloud Infrastructure', 'DevOps', 'Security'] },
	{ category: 'Development', items: ['Full-Stack', 'Mobile', 'Blockchain', 'AI/ML'] },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description="About Trong Dinh - CTO & Technology Leader" />
	</head>
	<body>
		<Header />
		<main>
			<section class="about-hero">
				<div class="about-content">
					<h1>About Me</h1>
					<p class="lead">
						Hi, I'm <span class="glow-text">Trong Dinh</span> â€” a technology leader passionate about 
						building products that make a difference.
					</p>
				</div>
			</section>

			<section class="bio-section">
				<div class="bio-card card">
					<h2>ðŸ‘‹ Hello!</h2>
					<p>
						I'm a CTO with a passion for building innovative technology solutions. 
						With years of experience leading engineering teams and driving technical strategy, 
						I've helped organizations scale their products and teams.
					</p>
					<p>
						1 wife, 2 kids. Opinions are my own only.
					</p>
					<p>
						When I'm not coding or architecting systems, you'll find me exploring new technologies, 
						mentoring the next generation of developers, or spending quality time with my family.
					</p>
				</div>
			</section>

			<section class="skills-section">
				<h2>Skills & Expertise</h2>
				<div class="skills-grid">
					{skills.map((skill) => (
						<div class="skill-card card">
							<h3>{skill.category}</h3>
							<ul>
								{skill.items.map((item) => (
									<li><span class="skill-tag tag">{item}</span></li>
								))}
							</ul>
						</div>
					))}
				</div>
			</section>

			<section class="connect-section">
				<h2>Let's Connect</h2>
				<p>Feel free to reach out through any of these platforms:</p>
				<div class="connect-links">
					<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="connect-link card">
						<svg viewBox="0 0 16 16" width="24" height="24">
							<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
						</svg>
						<div>
							<strong>GitHub</strong>
							<span>@trongdth</span>
						</div>
					</a>
					<a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer" class="connect-link card">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
						<div>
							<strong>Twitter</strong>
							<span>@trongdth</span>
						</div>
					</a>
					<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="connect-link card">
						<svg viewBox="0 0 24 24" width="24" height="24">
							<path fill="currentColor" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						<div>
							<strong>LinkedIn</strong>
							<span>in/trongdth</span>
						</div>
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 900px;
		width: 100%;
		overflow-x: hidden;
	}

	.about-hero {
		text-align: center;
		padding: 4em 1em 2em;
		width: 100%;
		box-sizing: border-box;
	}

	.about-hero h1 {
		font-size: 3rem;
		margin-bottom: 1em;
		word-wrap: break-word;
		overflow-wrap: break-word;
		hyphens: auto;
	}

	.lead {
		font-size: 1.25rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.8;
		word-wrap: break-word;
		overflow-wrap: break-word;
	}

	.bio-section {
		padding: 2em 0;
	}

	.bio-card {
		padding: 2em;
	}

	.bio-card h2 {
		margin-bottom: 1em;
	}

	.bio-card p {
		font-size: 1.1rem;
		line-height: 1.8;
	}

	.skills-section {
		padding: 2em 0;
	}

	.skills-section h2 {
		margin-bottom: 1.5em;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.5em;
	}

	.skill-card {
		padding: 1.5em;
	}

	.skill-card h3 {
		font-size: 1.1rem;
		margin-bottom: 1em;
		color: var(--accent-cyan);
	}

	.skill-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
	}

	.skill-card li {
		margin: 0;
	}

	.connect-section {
		padding: 2em 0 4em;
	}

	.connect-section h2 {
		margin-bottom: 0.5em;
	}

	.connect-section > p {
		color: var(--text-muted);
		margin-bottom: 2em;
	}

	.connect-links {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1em;
	}

	.connect-link {
		display: flex;
		align-items: center;
		gap: 1em;
		padding: 1.5em;
		text-decoration: none;
		color: inherit;
	}

	.connect-link svg {
		color: var(--accent-cyan);
		flex-shrink: 0;
	}

	.connect-link div {
		display: flex;
		flex-direction: column;
	}

	.connect-link strong {
		color: var(--text-primary);
	}

	.connect-link span {
		color: var(--text-muted);
		font-size: 0.9rem;
	}

	/* Responsive - Standardized breakpoints: 640px (mobile), 768px (tablet), 1024px (desktop) */
	@media (max-width: 1024px) {
		.skills-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		.skills-grid,
		.connect-links {
			grid-template-columns: 1fr;
		}

		.about-hero {
			padding: 2em 1em 1em;
		}

		.about-hero h1 {
			font-size: 1.75rem;
		}

		.lead {
			font-size: 1.1rem;
			padding: 0 0.5em;
		}

		.bio-card,
		.skill-card,
		.connect-link {
			padding: 1.25em;
		}

		.bio-card p {
			font-size: 1rem;
		}
	}

	@media (max-width: 480px) {
		.about-hero h1 {
			font-size: 1.5rem;
		}

		.lead {
			font-size: 1rem;
		}

		.skill-card h3 {
			font-size: 1rem;
		}

		.connect-link {
			padding: 1em;
		}

		.connect-link div strong {
			font-size: 0.95rem;
		}

		.connect-link div span {
			font-size: 0.85rem;
		}
	}
</style>
