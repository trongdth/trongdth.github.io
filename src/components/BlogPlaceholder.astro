---
interface Props {
  title: string;
  variant?: 'hero' | 'thumbnail';
}

const { title, variant = 'hero' } = Astro.props;
---

<div class={`blog-placeholder ${variant}`}>
  <svg class="placeholder-icon" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
    <!-- Abstract layers/code pattern -->
    <g opacity="0.6">
      <rect x="15" y="20" width="70" height="12" rx="2" fill="currentColor" />
      <rect x="15" y="40" width="70" height="12" rx="2" fill="currentColor" />
      <rect x="15" y="60" width="70" height="12" rx="2" fill="currentColor" />
      <circle cx="25" cy="26" r="3" fill="currentColor" opacity="0.8" />
      <circle cx="25" cy="46" r="3" fill="currentColor" opacity="0.8" />
      <circle cx="25" cy="66" r="3" fill="currentColor" opacity="0.8" />
    </g>
  </svg>
  <h3 class="placeholder-title">{title}</h3>
</div>

<style>
  .blog-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1em;
    width: 100%;
    aspect-ratio: 2 / 1;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 2em;
    position: relative;
    overflow: hidden;
  }

  /* Radial glow overlay */
  .blog-placeholder::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(6, 182, 212, 0.15) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  .placeholder-icon {
    width: 60px;
    height: 60px;
    color: var(--accent-cyan);
    filter: drop-shadow(0 0 10px rgba(6, 182, 212, 0.3));
    position: relative;
    z-index: 1;
  }

  .placeholder-title {
    font-size: 1.1rem;
    color: var(--text-primary);
    text-align: center;
    margin: 0;
    max-width: 90%;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  /* Thumbnail variant - smaller, single line */
  .blog-placeholder.thumbnail {
    aspect-ratio: auto;
    width: 200px;
    height: 120px;
    gap: 0.5em;
    padding: 1em;
  }

  .blog-placeholder.thumbnail .placeholder-icon {
    width: 40px;
    height: 40px;
  }

  .blog-placeholder.thumbnail .placeholder-title {
    font-size: 0.9rem;
    -webkit-line-clamp: 1;
  }

  /* Responsive - tablet */
  @media (max-width: 768px) {
    .blog-placeholder {
      aspect-ratio: 2 / 1;
    }

    .blog-placeholder.thumbnail {
      width: 100%;
      height: 200px;
      aspect-ratio: auto;
    }
  }

  /* Responsive - mobile */
  @media (max-width: 640px) {
    .blog-placeholder {
      padding: 1.5em;
      gap: 0.75em;
    }

    .placeholder-icon {
      width: 50px;
      height: 50px;
    }

    .placeholder-title {
      font-size: 1rem;
    }

    .blog-placeholder.thumbnail {
      width: 100%;
      height: 160px;
    }

    .blog-placeholder.thumbnail .placeholder-icon {
      width: 35px;
      height: 35px;
    }

    .blog-placeholder.thumbnail .placeholder-title {
      font-size: 0.85rem;
    }
  }
</style>
