---
import { SOCIAL_LINKS, SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-brand">
			<span class="brand-text">&lt;{SITE_TITLE}/&gt;</span>
			<p class="tagline">Building the future, one line at a time.</p>
		</div>

		<div class="footer-links">
			<h4>Connect</h4>
			<div class="social-links">
				<a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer">
					<svg viewBox="0 0 16 16" width="20" height="20">
						<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
					</svg>
					GitHub
				</a>
				<a href={SOCIAL_LINKS.twitter} target="_blank" rel="noopener noreferrer">
					<svg viewBox="0 0 24 24" width="20" height="20">
						<path fill="currentColor" d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
					</svg>
					Twitter
				</a>
				<a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer">
					<svg viewBox="0 0 24 24" width="20" height="20">
						<path fill="currentColor" d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
					LinkedIn
				</a>
			</div>
		</div>
	</div>

	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} Trong Dinh. All rights reserved.</p>
		<p class="powered-by">Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a></p>
	</div>
</footer>

<style>
	footer {
		margin-top: auto;
		padding: 3em 1.5em;
		background: var(--bg-secondary);
		border-top: 1px solid var(--border-color);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		max-width: 1200px;
		margin: 0 auto 2em;
		gap: 2em;
	}

	.footer-brand {
		max-width: 300px;
	}

	.brand-text {
		font-family: 'JetBrains Mono', monospace;
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--accent-cyan);
	}

	.tagline {
		margin-top: 0.5em;
		color: var(--text-muted);
		font-size: 0.9rem;
	}

	.footer-links h4 {
		margin-bottom: 1em;
		color: var(--text-primary);
		font-size: 0.9rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.75em;
	}

	.social-links a {
		display: flex;
		align-items: center;
		gap: 0.75em;
		min-height: 44px;
		color: var(--text-secondary);
		text-decoration: none;
		transition: all var(--transition-fast);
		padding: 0.5em 0;
	}

	.social-links a:hover {
		color: var(--accent-cyan);
		transform: translateX(4px);
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding-top: 2em;
		border-top: 1px solid var(--border-color);
	}

	.footer-bottom p {
		margin: 0;
		color: var(--text-muted);
		font-size: 0.875rem;
	}

	.powered-by a {
		color: var(--accent-purple);
	}

	.powered-by a:hover {
		color: var(--accent-cyan);
	}

	/* Responsive - Standardized breakpoints: 640px (mobile), 768px (tablet), 1024px (desktop) */
	@media (max-width: 640px) {
		.footer-content {
			flex-direction: column;
			gap: 1.5em;
		}

		.footer-brand {
			max-width: 100%;
		}

		.footer-bottom {
			flex-direction: column;
			gap: 0.75em;
			text-align: center;
		}
	}
</style>
